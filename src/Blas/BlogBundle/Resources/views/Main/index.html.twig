{% extends '::base.html.twig' %}

{% block body %}
    <div class="jumbotron">
        <h3>Post ME!!</h3>
        {% form_theme form 'BlasBlogBundle:Form:fields.html.twig' %}
        {{ form(form) }}
    </div>

    {% if posts|length > 0 %}

    {% for post in posts %}
        <div class="row">
            <div class="col-lg-12">
                <h2>{{ post.title }}</h2>
                <p>{{ post.post }}</p>
                <small><i>Posted by {{ post.owner }}</i> | <a href="{{ path('blas_blog_comments',{id: post.id}) }}">Coments ({{ post.comments|length }})</a></small>
            </div>
        </div>
    {% endfor %}

    {% else %}
        <div class="alert alert-info">No hay post disponibles</div>
    {% endif %}

    <scrip>
        $(document).(function(){
            alert("sda");
        });
    </scrip>
{% endblock %}


