{% extends '::base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <h2>{{ post.title }}</h2>
            <p>{{ post.post }}</p>
            <small><i>Posted by {{ post.owner }}</i> </small>
        </div>
    </div>

    <hr/>
    <h4>Comentarios</h4>
    {% form_theme form 'BlasBlogBundle:Form:fields.html.twig' %}
    {{ form(form) }}

    {% if post.comments|length > 0 %}
        {% for comment in post.comments %}
            <div class="row">
                <div class="col-lg-12">
                    <p>{{ comment.comment }}</p>
                    <small><i>Comment by {{ comment.owner }}</i></small>
                </div>
            </div>
        {% endfor %}
    {% else %}
        <br>
        <div class="alert alert-info">No hay comentarios disponibles para este post</div>
    {% endif %}

{% endblock %}